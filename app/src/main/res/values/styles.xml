<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoldText" parent="android:Widget.TextView">
        <item name="fontPath">fonts/HelveticaNeue-Condensed Bold.ttf</item>
    </style>

    <style name="ThinText" parent="android:Widget.TextView">
        <item name="fontPath">fonts/HelveticaNeue-Condensed Thin.ttf</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DialogText" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BoldPurpleTextCaps" parent="android:Widget.TextView">
        <item name="fontPath">fonts/HelveticaNeue-Condensed Bold.ttf</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BoldPurpleText" parent="android:Widget.TextView">
        <item name="fontPath">fonts/HelveticaNeue-Condensed Bold.ttf</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TitleCaps" parent="android:Widget.TextView">
        <item name="fontPath">fonts/HelveticaNeue-Condensed Bold.ttf</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TitleRegular" parent="android:Widget.TextView">
        <item name="fontPath">fonts/HelveticaNeue-Condensed Bold.ttf</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Buttons on bottom of map, help/register/etc as well as hamburger mirror of those buttons -->
    <style name="MapActionButton" parent="Widget.AppCompat.Button">
        <item name="fontPath">fonts/HelveticaNeue-Condensed Bold.ttf</item>
        <item name="android:background">@drawable/rounded_button_red</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">32sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">16sp</item>
        <item name="android:autoSizeStepGranularity" tools:targetApi="o">2sp</item>
    </style>

    <!-- Buttons on usually on the bottom of the screen, mostly full-width -->
    <style name="FullBottomButton" parent="Widget.AppCompat.Button">
        <item name="fontPath">fonts/HelveticaNeue-Condensed Bold.ttf</item>
        <item name="android:background">@drawable/rounded_button_purple</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">32sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">16sp</item>
        <item name="android:autoSizeStepGranularity" tools:targetApi="o">2sp</item>
    </style>

    <!-- Gray dividing line -->
    <style name="GrayLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/disabled</item>
    </style>

</resources>
